const express = require("express");
const router = express.Router();
const {
  addPoliceStation,
  getAllPoliceStations,
  getNearbyStations,
  updatePoliceStation,
  deletePoliceStation,
} = require("../controllers/policeController");
const { protect, adminOnly, policeOnly } = require("../middleware/authMiddleware");

// Add police station (Admin only)
router.post("/", protect, policeOnly, addPoliceStation);

// Get all police stations
router.get("/", protect, getAllPoliceStations);

// Get nearby police stations
router.get("/nearby", protect, getNearbyStations);

// Update police station (Admin only)
router.put("/:id", protect, policeOnly, updatePoliceStation);

// Delete police station (Admin only)
router.delete("/:id", protect, policeOnly, deletePoliceStation);

module.exports = router;
